<view class="container" xmlns="http://www.w3.org/1999/html">
    <view class="BPM">
        <view class="bpmTitle">Average BPM:</view>
        <view class="bpmValue">
            <view class="bpmAvg">{{bpmAvg}}</view>
            <view class="bpmArray">
                <view wx:for="{{bpmArray}}">{{item}}</view>
            </view>
        </view>
    </view>
    <view class="BPMSingle">Single BPM  :{{bpmSingle}}</view>
    <view class="buttons">
        <button style="width: 100%;height: 200rpx;display: flex;align-items: center;justify-content: center;" bindtap="tap">{{tapButton}}</button>
        <button style="width: 100%;height: 50rpx;display: flex;align-items: center;justify-content: center;background: #a7dce0;" bindtap="reset">重置</button>
    </view>
    <view class="options">
        <checkbox-group bindchange="checkboxChange">
            <label>
                <checkbox value="skipN" checked="{{false}}"/>跳过前N次点击
            </label>
        </checkbox-group>
    </view>
    <view class="optionParams">
        <view wx:if="{{skipN}}" style="display:flex;flex-direction: row;">
            N =
            <input type="number" bindblur="inputN"/>
        </view>
    </view>

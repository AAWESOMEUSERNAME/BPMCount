/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #bdf6fa;
  height: 100%;
  width: 100%;
}

.BPM {
  display: flex;
  width: 100%;
  height: 300rpx;
  flex-direction: column;
  justify-content: center;
  align-items: start;
}
.bpmTitle{
  margin-left: 100rpx;
  margin-right: 100rpx;
}
.bpmValue{
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #b3ffc2;
  width: 100%;
  font-size: 150rpx;
  text-align: center;
}
.buttons{
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}
.options{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100rpx;
  width: 100%;
  padding-left: 100rpx;
}
.optionParams{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: start;
  width: 100%;
  padding-left: 100rpx;
}
.show{
  display: flex;
}
.hide{
  display: none;
}
